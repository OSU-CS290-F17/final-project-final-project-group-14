{{!--{{>globalHeader}}--}}

{{>accountHeader}}
<div class="transfer-wrapper">
<div id="transaction">
  <h2>Deposit and Withdrawl</h2>
  <div class="transaction-flex-wrapper">
  <div class="transaction-account transaction-flex">
    <p>Add/Subtract from</p>

    <label for="transact-from-acc">Transaction</label>
    <select id="transact-from-acc" class="transact-from-input transact-input" name="transact-from-acc">
      <option selected value="">Choose an account</option>
      <option>checkings</option>
      <option>savings</option>
    </select>
  </div>

  <div class="transaction-type transaction-flex">
    <p>Withdraw or Deposit</p>

    <label for="transact-type">Transaction Type</label>
    <select id="transact-type" class="transact-type-input transact-input" name="transact-type">
      <option selected value="">Choose an transaction</option>
      <option>deposit</option>
      <option>withdraw</option>
    </select>
  </div>

  <div class="transact-amount transaction-flex">
    <p class="transact-title">Amount</p>

    <label for="transact-amount">Transfer</label>
    <input type="number" class="transact-input" id="transact-amount"></input>
    <span class="input-dollar-sign"> $</span>
  </div>
</div>

  <div class="transfer-footer">
    <button id="changeAmount" class="transfer-accept" type="button">Accept</button>
  </div>
</div>
<div id = "tranfering">
  <h2>Transfer Money</h2>
  <div class="transaction-flex-wrapper">
    <div class="transfer-from transaction-flex">
      <p class="transfer-title">Transfer from</p>

      <label for="transfer-from-acc">Transaction</label>
      <select id="transfer-from-acc" class="transfer-from-input transact-input" name="transfer-from-acc">
        <option selected value="">Choose an account</option>
        <!--check if user has checking or savings based off database -->
        <option>checking</option>
        <option>savings</option>
      </select>
    </div>

    <div class="transfer-to transaction-flex">
      <p class="transfer-title">Transfer from</p>

      <label for="transfer-to-acc">Transfer</label>
      <select id="transfer-to-acc" class="transfer-from-input transact-input" name="transfer-to-acc">
        <option selected value="">Choose an account</option>
        <!--check if user has checking or savings based off database -->
        <option>checking</option>
        <option>savings</option>
      </select>
    </div>

    <div class="transfer-amount transaction-flex">
      <p class="transfer-title">Amount</p>

      <label for="transfer-amount-input">Transfer</label>
      <input type="number" class="transact-input" id="transfer-amount-input"></input>
      <span class="input-dollar-sign"> $</span>
      

      <!--Add memo??-->
    </div>
  </div>
</div>
  <div class="transfer-footer">
    <a href="/"><button id="transfer" class="transfer-accept" type="button">Accept</button></a>
  </div>
</div>
